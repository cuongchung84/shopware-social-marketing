{
    "name": "swag/social-marketing",
    "description": "Social Marketing plugin for Shopware 6",
    "type": "shopware-platform-plugin",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "openhands-dev"
        }
    ],
    "require": {
        "shopware/core": "6.7.*"
    },
    "extra": {
        "shopware-plugin-class": "Swag\\SocialMarketing\\SwagSocialMarketing",
        "label": {
            "de-DE": "Social Marketing",
            "en-GB": "Social Marketing"
        }
    },
    "autoload": {
        "psr-4": {
            "Swag\\SocialMarketing\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0"
    }
}
