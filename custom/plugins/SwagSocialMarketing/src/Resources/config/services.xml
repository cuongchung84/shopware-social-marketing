<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Swag\SocialMarketing\Service\ConfigService" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="Swag\SocialMarketing\Service\Clients\FacebookClient" public="true">
            <argument type="service" id="Swag\SocialMarketing\Service\ConfigService"/>
            <argument type="service" id="http_client"/>
            <argument type="service" id="logger"/>
        </service>
        <service id="Swag\SocialMarketing\Service\Clients\InstagramClient" public="true">
            <argument type="service" id="Swag\SocialMarketing\Service\ConfigService"/>
            <argument type="service" id="http_client"/>
            <argument type="service" id="logger"/>
        </service>
    </services>
</container>
