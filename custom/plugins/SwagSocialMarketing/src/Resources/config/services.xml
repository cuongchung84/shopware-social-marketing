<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Swag\SocialMarketing\Service\ConfigService" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="Swag\SocialMarketing\Service\Clients\FacebookClient" public="true">
            <argument type="service" id="Swag\SocialMarketing\Service\ConfigService"/>
            <argument type="service" id="http_client"/>
            <argument type="service" id="monolog.logger.swag_social_marketing"/>
        </service>
        <service id="Swag\SocialMarketing\Service\Clients\InstagramClient" public="true">
            <argument type="service" id="Swag\SocialMarketing\Service\ConfigService"/>
            <argument type="service" id="http_client"/>
            <argument type="service" id="monolog.logger.swag_social_marketing"/>
        </service>
        <service id="Swag\SocialMarketing\Service\Clients\TikTokClient" public="true">
            <argument type="service" id="Swag\SocialMarketing\Service\ConfigService"/>
            <argument type="service" id="http_client"/>
            <argument type="service" id="monolog.logger.swag_social_marketing"/>
        </service>
        <service id="Swag\SocialMarketing\Service\SocialPostService" public="true">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="Swag\SocialMarketing\Service\Clients\FacebookClient"/>
            <argument type="service" id="Swag\SocialMarketing\Service\Clients\InstagramClient"/>
            <argument type="service" id="Swag\SocialMarketing\Service\Clients\TikTokClient"/>
            <argument type="service" id="monolog.logger.swag_social_marketing"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="swag_social_marketing_log.repository"/>
        </service>
        <service id="Swag\SocialMarketing\ScheduledTask\SocialPostTaskHandler">
            <argument type="service" id="Swag\SocialMarketing\Service\SocialPostService"/>
            <argument type="service" id="product.repository"/>
            <argument type="service" id="monolog.logger.swag_social_marketing"/>
            <tag name="messenger.message_handler"/>
        </service>
        <service id="Swag\SocialMarketing\Core\Content\SocialMarketingLog\SocialMarketingLogDefinition">
            <tag name="shopware.entity.definition" entity="swag_social_marketing_log"/>
        </service>
    </services>
</container>
